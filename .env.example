# Papertrail MCP Server Environment Variables

# Papertrail API Configuration
PAPERTRAIL_API_TOKEN=your_papertrail_api_token_here
PAPERTRAIL_BASE_URL=https://papertrailapp.com/api/v1

# Server Configuration
PORT=3001
HOST=0.0.0.0

# MCP Configuration
MCP_SERVER_NAME=papertrail-mcp
MCP_SERVER_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json